<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2023-12-27-init-db" author="ivanuil">

        <createTable tableName="webhook">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="url" type="VARCHAR"/>
            <column name="username" type="VARCHAR"/>
        </createTable>

        <createSequence sequenceName="webhook_seq" incrementBy="1" startValue="1"/>

        <createIndex tableName="webhook" indexName="idx_webhook_username">
            <column name="username"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>